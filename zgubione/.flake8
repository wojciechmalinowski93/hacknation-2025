[flake8]
exclude =
    docs,
    settings,
    migrations,
    translations,
    docker,
    temp,
    frontend,
    media,
    statics,
    test-data,
    data,
    database,
    configs
max-complexity = 10
max-line-length = 130
strict = True
count = True
statistics = True
ignore = N801,N802,N803,N804,N805,N806,N815,N816,W503,W504,E203,E701
